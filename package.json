{
  "name": "glowhost-contact-form-system",
  "version": "1.0.0",
  "description": "Professional contact form system optimized for shared hosting deployment",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 --turbopack",
    "build": "next build",
    "build-static": "next build",
    "build:deployment": "next build && node scripts/build-deployment.js",
    "start": "next start",
    "lint": "bunx tsc --noEmit && next lint",
    "format": "bunx biome format --write",
    "deploy:validate": "node scripts/build-deployment.js --validate-only",
    "deploy:package": "bun run build:deployment && echo 'ðŸ“¦ Deployment package ready in deployment-package/'",
    "deploy:local": "bun run build:deployment && cd deployment-package && python3 -m http.server 8000",
    "docs:format": "node .same/doc-formatter.js format",
    "docs:validate": "node .same/doc-formatter.js validate",
    "docs:check": "node .same/doc-formatter.js validate && echo 'All documentation is properly formatted!'",
    "docs:timestamp": "node -e \"const DocumentFormatter = require('./.same/doc-formatter.js'); const f = new DocumentFormatter(); console.log('ðŸ“… Current EST Timestamp:', f.getCurrentESTTimestamp());\"",
    "git:status": "node scripts/git-status.js",
    "git:verify": "bash scripts/verify-github-sync.sh",
    "git:check": "git status && git remote -v && git log --oneline -3"
  },
  "keywords": [
    "contact-form",
    "nextjs",
    "shared-hosting",
    "glowhost",
    "cpanel",
    "php",
    "static-export"
  ],
  "author": "GlowHost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GlowHost-Matt/contact-form-sales.git"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "next": "^15.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "same-runtime": "^0.0.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^20.17.50",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "eslint": "^9.27.0",
    "eslint-config-next": "15.1.7",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "deploymentInfo": {
    "targetEnvironment": "shared-hosting",
    "phpVersion": "7.4+",
    "webServer": "Apache",
    "features": ["static-export", "php-api", "cpanel-optimized"]
  }
}