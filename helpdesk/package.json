{
  "name": "glowhost-contact-form-frontend",
  "version": "2.0.0",
  "description": "GlowHost Contact Form - React.js Frontend",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 --turbopack",
    "build": "next build",
    "build-static": "next build && next export",
    "start": "next start",
    "lint": "next lint",
